<%= form_for(@store) do |f| %>
    <%= render "shared/error_messages", :target => @store %>
    <div class="row-fluid">

      <div class="field span3">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="field span3">
        <%= f.label :owner %>
        <%= f.text_field :owner %>
      </div>
      <div class="field span3">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="field span3">
        <%= f.label :location %>
        <%= f.text_field :location %>
      </div>
    </div>
    <div class="row-fluid"><%= f.label :description %></div>
    <div class="row-fluid">
      <%= f.text_area :description, :class => "span12" %>
    </div>
    <div class="field">
      <%= f.label :cover %>
      <%= f.file_field :cover %>
    </div>
    <div class="field">
      <%= f.label :logo %>
      <%= f.file_field :logo %>
    </div>
    <%= f.submit :class => "btn btn-large btn-primary" %>
<% end %>
