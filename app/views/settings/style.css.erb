<% @settings = Setting.first %>
.well {
    background-color: <%= @settings.well_color %>;
}

.hero-unit {
    background-color: <%= @settings.well_color %>;
}

html {
    background-color: <%= @settings.html_background %>;
}

body {
    width: <%= @settings.page_width %>%;
}

.pagination ul > li > a {
    background-color: <%= @settings.page_background %>;
}

.pagination ul >  li.disabled > a {
    background-color: <%= @settings.page_background %>;
}
.pagination ul >  li.active > a {
    background-color: lighten(<%= @settings.page_background %>, 25%);
}
