<%- model_class = Product -%>
<div class="page-header">
  <h1>
    <% if @searchTerm.nil? %>
        All Products
    <% else %>
        <%=  "Search Results: \"#{@searchTerm}\""  %>
    <% end %>
  </h1>
</div>


<%= render :partial => 'productIndex' %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
