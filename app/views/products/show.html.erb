<%- model_class = Product -%>

<div class="hero-unit">
  <h2><%= @product.name %></h2>

  <div class="MyGallery">
    <% for i in 0..(@product.pictures.length - 1) %>
        <div>
        <% @picture = @product.pictures[i] %>
        <%= image_tag @picture.photo.url(:small), :"data-img" => @picture.photo.url(:large)  %>
        </div>
    <% end %>
  </div>
  <script>

      $(function() {
          $('.MyGallery').SuperBox();
      });


  </script>
  <p><%= @product.description %></p>


  <strong><%= model_class.human_attribute_name(:price) %>:</strong> $<%= @product.price %>
  <div class="clearfix"></div>
  <strong><%= model_class.human_attribute_name(:quantity) %>:</strong> <%= @product.quantity %>
  <div class="clearfix"></div>
  <div class="clearfix"></div>




  <div class="text-right">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                products_path, :class => 'btn' %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_product_path(@product), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                product_path(@product),
                :method => 'delete',
                :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                :class => 'btn btn-danger' %>
  </div>

</div>
